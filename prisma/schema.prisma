generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//Table : Game, User, , Userinfo, GameInfo, Comment
//User와 Game은 1:N
//User와 Userinfo는 1:1
//User와 Comment는 1:N
//Game과 Comment는 1:N
//Game과 GameInfo는 1:1
//
model User {
  userId    Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String   @default("user")

  Resume Resume[]
}

model Resume {
  resumeId  Int      @id @default(autoincrement())
  userId    Int
  title     String
  introduce String
  author    String
  status    Status   @default(APPLY)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

enum Status {
  APPLY
  DROP
  PASS
  INTERVIEW1
  INTERVIEW2
  FINAL_PASS
}
